{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src/index.ts",
    "src/core",
    "src/wrapper"
  ],
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node"
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "includeVersion": true,
    "name": "Steam WebAPI Docs",
    "out": "docs",
    "theme": "default",
    "darkHighlightTheme": "dark-plus"
  }
}
