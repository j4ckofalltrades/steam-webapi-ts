{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/index.ts", "src/api"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "theme": "minimal",
    "includeVersion": true
  }
}
